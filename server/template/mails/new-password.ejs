<!-- reset-password.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= translations.new_pwd_subject %></title>
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            min-width: 100%;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            background-color: #FAFAFA;
            color: #222222;
        }
        a {
            color: #0070f3;
            text-decoration: none;
        }
        .email-wrapper {
            max-width: 600px;
            margin: 0 auto;
            padding: 24px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fff;
        }
        .email-header {
            text-align: center;
            background-color: #0070f3;
            padding: 24px;
            color: #ffffff;
        }
        .email-body {
            margin-top: 24px;
        }
        .button {
            display: inline-block;
            background-color: #0070f3;
            color: #ffffff;
            font-size: 16px;
            font-weight: 700;
            text-align: center;
            text-decoration: none;
            padding: 12px 24px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="email-wrapper">
        <div class="email-header">
            <h1><%= translations.new_pwd_subject %></h1>
        </div>
        <div class="email-body">
            <p><%= translations.new_pwd_greeting %> <%= user.name %>,</p>
            <p><%= translations.new_pwd_message %></p>
            <p><%= translations.new_pwd_password %></p>
            <p><%= newPassword %></p>
            <p><%= translations.new_pwd_contact_support %></p>
        </div>
    </div>
</body>
</html>
